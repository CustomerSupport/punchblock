#!/usr/bin/env ruby
$:.push File.join(File.dirname(__FILE__), '..', 'lib')
require 'bundler/setup'
require 'punchblock'

Thread.abort_on_exception = true

transport_logger = Logger.new('ozone-transport.log')
transport_logger.level = Logger::DEBUG
transport_logger.debug "Starting up..."
protocol_logger = Logger.new('ozone-protocol.log')
protocol_logger.level = Logger::DEBUG
protocol_logger.debug "Starting up..."
protocol = Punchblock::Protocol::Ozone
transport = Punchblock::Transport::XMPP.new protocol, 'usera@127.0.0.1', '1', :transport_logger => transport_logger, :protocol_logger => protocol_logger
x = Thread.new do
  begin
    transport.run
  rescue => e
    puts "Exception in XMPP thread! #{e.message}"
    puts e.backtrace.join("\t\n")
  end
end

event_logger = Logger.new('ozone-events.log')
event_logger.level = Logger::DEBUG
CALL_QUEUES = {}
INFO_EVENT_QUEUE = Queue.new

### DISPATCHER THREAD
# This thread multiplexes the event stream from the underlying protocol handler and routes them
# to the correct queue for each call.  It also starts a call handler, the run_call method) after creating
# the queue.
Thread.new do
  loop do
    event = transport.event_queue.pop
    case event
    when Punchblock::Call
      raise "Duplicate call ID for #{event.id}" if CALL_QUEUES.has_key?(event.id)
      CALL_QUEUES[event.id] = Queue.new
      CALL_QUEUES[event.id].push event
      run_call transport, protocol, event
    when protocol::Message::Info
      INFO_EVENT_QUEUE.push event

    else
      puts "Unknown event: #{event.inspect}"
    end

  end
end

def run_call(transport, protocol, call)
  ### CALL THREAD
  # One thread is spun up to handle each call.
  Thread.new do
    raise "Unknown call #{call.id}" unless CALL_QUEUES.has_key?(call.id)
    queue = CALL_QUEUES[call.id]
    call = queue.pop

    dsl = Punchblock::DSL.new transport, protocol, call, queue

    puts "Incoming call #{call.id}"
    dsl.answer
    dsl.say 'Hello World'
    sleep 5
    dsl.hangup

    # Clean up the queue.
    CALL_QUEUES[call_id] = nil
  end
end

x.join
